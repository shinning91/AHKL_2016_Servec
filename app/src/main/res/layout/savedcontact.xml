<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/contact1"
        android:onClick="goProfile">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contact1_img"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:width="96dp"
            android:height="96dp"
            android:src="@drawable/profile_picture"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_below="@+id/nameTextView"
            android:layout_centerHorizontal="true" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="80px"
            >
            <TextView
                android:text="Khairul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact1_name"
                android:layout_marginTop="40px"
                android:textStyle="bold"
                android:textSize="16dp" />
            <TextView
                android:text="Freelance Designer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact1_title"
                android:layout_below="@+id/contact1_name"
                android:layout_marginTop="20px"
                android:textStyle="bold"
                android:textSize="16dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/contact2"
        android:onClick="goProfile">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contact2_img"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:width="96dp"
            android:height="96dp"
            android:src="@drawable/plumber"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_below="@+id/nameTextView"
            android:layout_centerHorizontal="true" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="80px"
            >
            <TextView
                android:text="Eric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact2_name"
                android:layout_marginTop="40px"
                android:textStyle="bold"
                android:textSize="16dp" />
            <TextView
                android:text="Plumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact2_title"
                android:layout_below="@+id/contact2_name"
                android:layout_marginTop="20px"
                android:textStyle="bold"
                android:textSize="16dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/contact3"
        android:onClick="goProfile">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contact3_img"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:width="96dp"
            android:height="96dp"
            android:src="@drawable/profile_picture"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_below="@+id/nameTextView"
            android:layout_centerHorizontal="true" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="80px"
            >
            <TextView
                android:text="Jessica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact3_name"
                android:layout_marginTop="40px"
                android:textStyle="bold"
                android:textSize="16dp" />
            <TextView
                android:text="Writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact3_title"
                android:layout_below="@+id/contact3_name"
                android:layout_marginTop="20px"
                android:textStyle="bold"
                android:textSize="16dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/contact4"
        android:onClick="goProfile">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/conact4_img"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:width="96dp"
            android:height="96dp"
            android:src="@drawable/profile_picture"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_below="@+id/nameTextView"
            android:layout_centerHorizontal="true" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="80px"
            >
            <TextView
                android:text="James Wong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact4_name"
                android:layout_marginTop="40px"
                android:textStyle="bold"
                android:textSize="16dp" />
            <TextView
                android:text="Web Developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact4_title"
                android:layout_below="@+id/contact4_name"
                android:layout_marginTop="20px"
                android:textStyle="bold"
                android:textSize="16dp"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>